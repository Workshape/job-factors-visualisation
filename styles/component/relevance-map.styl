.relevance-map

    .map
        @extends $texture-overlay
        overflow inherit
        border-radius 3px
        padding-bottom 70%
        position relative

    svg
        width 100%
        height 100%
        position absolute
        left 0
        top 0

    path
        transition fill .2s, opacity .2s, stroke .2s, stroke-width .2s
        stroke-width .4
        opacity .2
        cursor pointer

        &.has-data
            opacity 1

    .selection
        text-align center

    .info
        text-align center
        min-height 40px
        margin-bottom -10px

        .key
            color color-brand
            font-weight bold

        .value
            color color-black
            font-weight bold

    &.hovered path.has-data
        opacity .8
        
        &:hover
            opacity 1

    &.selected path
        opacity .2

        &.active
            opacity 1
            stroke color-brand
            stroke-width 2

    ul.nav
        @extend $colored-list
        text-align center
        margin-bottom 30px

        li
            display block
            float left
            padding 10px 0
            font-weight 100
            font-size 10px
            position relative
            width (100% / 11)
            box-sizing border-box
            text-transform uppercase
            overflow visible

            i
                display block
                font-size 25px
                margin-bottom 10px
                opacity .6

            .count
                border-radius()
                width 30px
                line-height 18px
                position absolute
                top 100%
                color color-white
                background color-black
                margin-top -9px
                left 50%
                transform translateX(-50%)
                font-size 8px
                font-weight normal
                transition background .2s

    .legend, .mode-switcher
        display inline-block
        width 180px
        text-align center
        position relative
        z-index 2

    .mode-switcher
        @extend .box
        text-align center
        float right
        margin-left 20px

        ul
            @extend $colored-list
            font-size 9px
            text-transform uppercase

            li
                width 50%
                float left
                padding 10px
                box-sizing border-box

    .legend
        float left
        margin-right 20px