.relevance-map

    .map
        border-radius 3px
        padding-bottom 70%
        position relative
    
    svg
        width 100%
        height 100%
        position absolute
        left 0
        top 0

    path
        transition fill .2s

    .keys
        debullet()
        text-align center

        li
            display inline-block
            padding 10px 12px
            background color-black
            cursor pointer
            color color-white
            font-weight 100
            transition background .2s
            font-size 13px

            border-right 1px solid rgba(color-white, .1)

            &:first-child
                border-radius(3px 0 0 3px)

            &:last-child
                border-radius(0 3px 3px 0)
                border-right 0

            &:hover
                background mix(color-black, color-brand)

            &.active
                background color-brand