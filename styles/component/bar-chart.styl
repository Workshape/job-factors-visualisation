bar-chart-color(base-color = color-brand)

    .fill
        background-color base-color

.bar-chart
    bar-chart-color()

    ul
        debullet()
        clearfix()

    li
        height 100%
        float left

    label
        transform rotate(-45deg)
        font-size 12px
        text-align left
        width 100px
        transform-origin 0 50%
        margin-top 30px
        margin-bottom 3px
        margin-left 50%

    ul.bars
        height 300px

        .bar
            border-radius()
            padding-right 1px
            padding-bottom 1px
            box-sizing border-box
            width 100%
            height 100%
            overflow hidden
            float left

            .fill
                border-radius()
                width 100%
                height 100%

    &.horizontal

        ul li
            width 100%
            float left
            height 30px

        label
            transform none
            text-align right
            margin-left 0
            margin-top 10px
            margin-bottom 5px
            padding-right 10px
            width auto

        ul.bars, ul.labels
            float left

        ul.labels
            width 30%
            text-align right

        ul.bars
            width 70%

            .bar
                float none

                .fill
                    height 100%

    .bar

        &.gender-male
            bar-chart-color(color-lightblue)

        &.gender-female
            bar-chart-color(color-pink)

        &.seniority-1
            bar-chart-color(color-alternate)

        &.seniority-2
            bar-chart-color(mix(color-alternate, color-brand, 75%))

        &.seniority-3
            bar-chart-color(mix(color-alternate, color-brand, 50%))

        &.seniority-4
            bar-chart-color(mix(color-alternate, color-brand, 25%))