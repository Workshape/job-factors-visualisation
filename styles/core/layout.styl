body
    margin 0
    background color-white
    
    &:after
        content ''
        position fixed
        width 100%
        height 100%
        padding-bottom 100%
        left 0
        top 50%
        transform translateY(-50%)
        background color-overlay-filter
        background-image radial-gradient(lighten(color-overlay-filter, 20), darken(color-overlay-filter, 50) 100%)
        opacity .07
        z-index 9999999
        pointer-events none

.fade-transition
    transition opacity 1s
    opacity 1

.fade-enter, .fade-leave
    opacity 0

section
    background color-white
    padding 100px 20px
    display block
    position relative
    z-index 1
    overflow hidden

    &:nth-child(odd)
        background color-grey-lightest

.scroll-indicator
    position absolute
    left 50%
    bottom 10px
    animation scroll-indicator 1s infinite alternate
    opacity .5
    text-align center
    font-size 12px

    &:before
        content 'Keep Going'
        color color-brand
        display block
        margin-bottom 10px
        
    &:after
        tail(color-brand, 'bottom', 5px)
        content ''

.loading
    position fixed
    width 100%
    height 100%
    left 0
    top 0
    background #fff
    text-align center
    z-index 999

    .inner
        position absolute
        top 50%
        width 100%
        text-align center
        transform translateY(-50%)
        font-size 13px

        &:after
            content 'Loading'
            display block
            position absolute
            top 50%
            left 50%
            color color-white
            transform translate(-50%, -50%)
            opacity .8
            font-size 10px
            text-transform uppercase

    .shape
        @extends $texture-overlay
        background-size 800% 800%
        animation bg-gradient 30s infinite alternate, full-rotation 10s linear infinite
        width 200px
        height @width
        display inline-block
        position relative
        mix-blend-mode darken
        margin-bottom 10px

        &:after
            animation bg-texture 50s infinite linear, buzz 2s infinite linear
            opacity .1

        &:before
            bg-image('loading-mask', 100% 100%, center center, no-repeat)
            content ''
            position absolute
            left 0
            top 0
            width 100%
            height 100%

    .shape-first
        margin-right -55px
        opacity .8
        background-image linear-gradient(90deg, #de20f1, #e89015, #ea243d, #5368bf)

    .shape-second
        margin-left -55px
        opacity .8
        background-image linear-gradient(0deg, #26bd96, #bd4926, #24ceea, #ddea24)

.page-width
    max-width: 900px
    margin auto

.gender-distribution

    .pie-chart
        margin-top 30px

    .legend
        margin-bottom 40px

header
    @extends $texture-overlay
    background-color #222
    text-align center
    width 100%
    left 0
    top 0
    overflow hidden
    position relative

    .half-sentence
        min-width 30%
        display inline-block
        padding 0 10px
        box-sizing border-box

        &.first
            text-align right

        &.last
            text-align left

    .counter-section
        smooth-font()
        color color-white

    .buttons-section
        margin-top 20px

    &:after
        opacity .15
        mix-blend-mode multiply
        animation bg-texture 30s infinite linear, buzz 2s infinite linear

    .gradient
        opacity .4

        &:before, &:after
            content ''
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            background-size 800% 800%
            animation bg-gradient 30s infinite alternate

        &:before
            background-image linear-gradient(90deg, #de20f1, #e89015, #ea243d, #5368bf)

        &:after
            background-image linear-gradient(0deg, #26bd96, #bd4926, #24ceea, #ddea24)

    .inner, .credits
        z-index 2

    .inner
        text-align center
        width 100%
        padding 150px 20px 200px
        position relative
        box-sizing border-box

    .bg-icon
        width 115px
        height @width
        color color-white
        font-size 70px
        border 2px solid color-white
        border-radius 100%
        display block
        margin auto
        margin-bottom 30px
        background rgba(color-white, .2)
        box-shadow 0 2px 2px 0 rgba(0, 0, 0, .2)

        i
            line-height @width

    .credits
        position absolute
        left 50%
        top 50%
        transform translate(-50%, -50%)

        .heart
            color color-brand

        h3
            text-transform none
            font-size 15px

    h1, h2, h3, .bg-icon
        color color-white
        text-shadow 0 1px 2px rgba(#000, .5)

    h1
        font-size 40px
        font-weight bold

    h2
        font-size 25px

.logo
    bg-image('logo-credits', contain, center center, no-repeat, 'svg')
    width (480px / 1.5)
    height (66px / 1.5)
    display block
    margin-right 30px

footer
    @extends $texture-overlay
    background darken(color-black, 10)
    text-align center
    padding 100px 0 120px

    .logo
        margin 20px auto 40px

    h3
        text-transform none
        color color-white

    &:after
        opacity .2
        animation bg-texture 50s infinite linear, buzz 2s infinite linear

.heading-icon
    color color-brand
    width 80px
    height @width
    border-radius 100%
    border 1px solid color-brand
    font-size 30px
    background lighten(color-brand, 90%)
    margin auto
    text-align center
    margin-bottom 15px
    box-shadow 0 2px 0 0 rgba(0, 0, 0, .1)
    display block

    i
        line-height @width

ul.total-counter
    debullet()
    border-radius()
    padding 2px
    background rgba(color-white, .2)
    display inline-block
    margin-bottom 0

    li
        border-radius()
        smooth-font()
        padding 12px
        line-height 25px
        display inline-block
        margin-left 1px
        font-family Monaco, mono
        background-color #212121
        border-bottom 2px solid #111
        background-image linear-gradient(rgba(color-white, .05), rgba(color-white, 0))
        color color-white
        font-size 13px

        &:first-child
            margin-left 0

@media (max-width: breakpoint-mobile)

    .scroll-indicator
        display none

    .credits
            position static
            transform none

    .logo
        transform scale(.6)
        margin-bottom -20px

    header
        padding 30px 0

        .inner, .credits
            padding 30px

        .half-sentence
            display block

            &.first, &.last
                text-align center