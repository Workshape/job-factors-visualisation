body
    margin 0
    background color-white
    
    &:after
        content ''
        position fixed
        width 100%
        height 100%
        padding-bottom 100%
        left 0
        top 50%
        transform translateY(-50%)
        background color-overlay-filter
        background-image radial-gradient(lighten(color-overlay-filter, 20), darken(color-overlay-filter, 50) 100%)
        opacity .07
        z-index 9999999
        pointer-events none

section
    background color-white
    padding 100px 20px
    display block
    position relative
    z-index 1
    overflow hidden

    &:nth-child(odd)
        background color-grey-lightest

.scroll-indicator
    position absolute
    left 50%
    bottom 10px
    animation scroll-indicator 1s infinite alternate
    opacity .5
    text-align center
    font-size 12px

    &:before
        content 'Keep Going'
        color color-brand
        display block
        margin-bottom 10px
        
    &:after
        tail(color-brand, 'bottom', 5px)
        content ''

    @media (max-width: breakpoint-mobile)
        display none

.loading
    position fixed
    width 100%
    height 100%
    left 0
    top 0
    background #fff
    text-align center
    z-index 999

    .inner
        position absolute
        top 50%
        width 100%
        text-align center
        transform translateY(-50%)
        font-size 13px

        &:after
            content 'Loading...'
            display block
            position absolute
            top 50%
            left 50%
            color color-white
            transform translate(-50%, -50%) rotate(-45deg)
            opacity .8
            font-size 15px
            font-weight 100

    .shape
        @extends $texture-overlay
        background-size 800% 800%
        animation bg-gradient 30s infinite alternate
        width 200px
        height @width
        display inline-block
        position relative
        mix-blend-mode multiply
        margin-bottom 10px

        &:before
            bg-image('loading-mask', 100% 100%, center center, no-repeat)
            content ''
            position absolute
            left 0
            top 0
            width 100%
            height 100%

    .shape-first
        margin-right -55px
        opacity .5
        background-image linear-gradient(90deg, #de20f1, #e89015, #ea243d, #5368bf)

    .shape-second
        margin-left -55px
        opacity .5
        background-image linear-gradient(0deg, #26bd96, #bd4926, #24ceea, #ddea24)

.page-width
    max-width: 900px
    margin auto

.gender-distribution

    .pie-chart
        margin-top 30px

    .legend
        margin-bottom 40px

header
    @extends $texture-overlay
    background-color #222
    text-align center
    width 100%
    left 0
    top 0
    overflow hidden
    position relative

    &:after
        opacity .15
        mix-blend-mode multiply
        animation bg-texture 30s infinite linear, buzz 2s infinite linear

    .gradient
        opacity .4

        &:before, &:after
            content ''
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            background-size 800% 800%
            animation bg-gradient 30s infinite alternate

        &:before
            background-image linear-gradient(90deg, #de20f1, #e89015, #ea243d, #5368bf)

        &:after
            background-image linear-gradient(0deg, #26bd96, #bd4926, #24ceea, #ddea24)

    .inner, .credits
        z-index 2

    .inner
        text-align center
        width 100%
        padding 200px 20px
        position relative
        box-sizing border-box

    .credits
        position absolute
        left 50%
        top 50%
        transform translate(-50%, -50%)

        .heart
            color color-brand

        h3
            text-transform none
            font-size 15px

        .logo
            bg-image('logo-credits', contain, center center, no-repeat, 'svg')
            width (480px / 1.5)
            height (66px / 1.5)
            display block
            margin-right 30px

    h1, h2, h3
        color color-white
        text-shadow 0 1px 2px rgba(#000, .5)

    h1
        font-size 40px
        font-weight bold

    h2
        font-size 25px
        margin-bottom 0